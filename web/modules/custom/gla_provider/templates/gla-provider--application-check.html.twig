<p>{{ 'Check your answers below before submitting your profile to be approved.'|t }}</p>
<ul class="list-unstyled">
  {% for step in steps %}
    <li>
      <div class="row">
        <div class="col-sm-8 col-md-10">
          <h2 class="heading--text"><strong>{{ step.label|raw }}</strong></h2>
          {% for substep in step %}
            <p>{{ substep.value }}</p>
          {% endfor %}
        </div>
        <div class="col-sm-4 col-md-2 end-sm">
          {{ step.link }}
        </div>
      </div>
    </li>
    <div class="separator"></div>
  {% endfor %}
</ul>

{{ continue }}
